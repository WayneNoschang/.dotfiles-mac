# --- Aliases ---

alias vim="nvim"

# Aliases for using kickstart project config in neovim 
alias nvim-kickstart="NVIM_APPNAME='nvim-kickstart' nvim"
alias vim-kickstart="nvim-kickstart"



# --- Parameters ---

export EDITOR="nvim"
export MANWIDTH=100
export MANPAGER="nvim +Man!"
